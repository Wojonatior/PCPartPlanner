<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="cse202.jarekwojo.pcpartplanner.AddPartActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/partDetail_PartNameLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceLarge"
        android:textStyle="bold"
        android:text="Name"/>

    <TextView
        android:id="@+id/partDetail_PartName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:text="Some Part"/>

    <TextView
        android:id="@+id/partDetail_PartDescriptionLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textAppearance="?android:textAppearanceLarge"
        android:textStyle="bold"
        android:text="Description"/>

    <TextView
        android:id="@+id/partDetail_PartDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:text="Some Description"/>

    <TextView
        android:id="@+id/partDetail_ManufacturerLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textAppearance="?android:textAppearanceLarge"
        android:textStyle="bold"
        android:text="Manufacturer"/>

    <TextView
        android:id="@+id/partDetail_Manufacturer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:textAppearance="?android:textAppearanceLarge"
        android:text="Some Manufacturer"/>

    <TextView
        android:id="@+id/partDetail_WarrantyStartLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textAppearance="?android:textAppearanceLarge"
        android:textStyle="bold"
        android:text="Warranty Start"/>

    <TextView
        android:id="@+id/partDetail_WarrantyStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:textAppearance="?android:textAppearanceLarge"
        android:text="April 6, 2015"/>

    <TextView
        android:id="@+id/partDetail_WarrantyDurationLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textAppearance="?android:textAppearanceLarge"
        android:textStyle="bold"
        android:text="Warranty Duration"/>

    <TextView
        android:id="@+id/partDetail_WarrantyDuration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:textAppearance="?android:textAppearanceLarge"
        android:text="Some Years"/>

    <TextView
        android:id="@+id/partDetail_NotesLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textAppearance="?android:textAppearanceLarge"
        android:textStyle="bold"
        android:text="Notes"/>

    <TextView
        android:id="@+id/partDetail_Notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:textAppearance="?android:textAppearanceLarge"
        android:text="Some Notes"/>

</LinearLayout>