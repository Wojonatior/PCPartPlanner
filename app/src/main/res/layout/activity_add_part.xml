<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="cse202.jarekwojo.pcpartplanner.AddPartActivity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:focusable="true"
        android:focusableInTouchMode="true">



        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Part Type"
                android:id="@+id/partTypeLabel" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/partTypeSpinner"
                android:layout_below="@+id/partTypeLabel"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:focusable="true"
                android:focusableInTouchMode="true" />
            <requestFocus />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Part Name"
                android:id="@+id/partNameLabel"
                android:layout_alignParentEnd="false"
                android:layout_alignParentRight="false"
                android:layout_alignParentStart="false"
                android:layout_below="@+id/partTypeSpinner" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/addPart_PartName"
                android:hint="(required)"
                android:maxLines="1"
                android:layout_below="@+id/partNameLabel"
                android:singleLine="true"
                android:focusable="true"
                android:focusableInTouchMode="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Manufacturer"
                android:id="@+id/manufacturerNameLabel"
                android:layout_below="@+id/addPart_PartName"
                android:layout_marginTop="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/addPart_ManufacturerName"
                android:hint="(required)"
                android:layout_below="@+id/manufacturerNameLabel"
                android:nextFocusDown="@+id/datePickerButton"
                android:singleLine="true"
                android:focusable="true"
                android:focusableInTouchMode="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Warranty Start Date"
                android:id="@+id/dateTextLabel"
                android:layout_below="@+id/addPart_ManufacturerName"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Date"
                android:id="@+id/datePickerButton"
                android:layout_alignTop="@+id/dateTextView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:focusable="true"
                android:focusableInTouchMode="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Date"
                android:id="@+id/dateTextView"
                android:layout_below="@+id/dateTextLabel"
                android:layout_toRightOf="@+id/datePickerButton"
                android:layout_toEndOf="@+id/datePickerButton"
                android:paddingTop="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Warranty Duration"
                android:id="@+id/warrantyDurationLabel"
                android:layout_below="@+id/datePickerButton"
                android:layout_marginTop="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/addPart_warrantyDuration"
                android:hint="(required)"
                android:layout_below="@+id/warrantyDurationLabel"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Serial Number"
                android:id="@+id/serialLabel"
                android:layout_below="@+id/addPart_warrantyDuration"
                android:layout_marginTop="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/addPart_SerialNumber"
                android:hint="(optional)"
                android:layout_below="@+id/serialLabel"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Notes"
                android:id="@+id/Notes"
                android:layout_below="@+id/addPart_SerialNumber"
                android:layout_marginTop="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/addPart_Notes"
                android:hint="(optional)"
                android:layout_below="@+id/Notes" />

            <Button
                android:id="@+id/addPart_SubmitButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/addPart_Notes"
                android:text="Submit"/>

        </RelativeLayout>
    </ScrollView>



</RelativeLayout>